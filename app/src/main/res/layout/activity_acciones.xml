<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"

    tools:context=".ui.detalleEvento.AccionesActivity">

    <!--No se esta ocupando este XML-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="90dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Titulo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Qué desea hacer con la siguiente información?"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- Información del hallazgo seleccionado -->
                <LinearLayout
                    android:id="@+id/linearLayout_EliminarAlerta_Activity_Acciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!-- Título para txtIDHallazgo_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="ID del Hallazgo" />

                    <TextView
                        android:id="@+id/txtIDHallazgo_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:maxLines="10"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"
                        android:layout_gravity="center"/>

                    <!-- Título para txtSector_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Sector" />

                    <TextView
                        android:id="@+id/txtSector_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtSupervisor_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Supervisor" />

                    <TextView
                        android:id="@+id/txtSupervisor_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtNivelAlerta_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nivel de Alerta" />

                    <TextView
                        android:id="@+id/txtNivelAlerta_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"/>

                    <!-- Título para txtDescripcion_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Descripción" />

                    <TextView
                        android:id="@+id/txtDescripcion_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:maxLines="10"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtVerificado_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Verificado" />

                    <TextView
                        android:id="@+id/txtVerificado_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"/>

                    <!-- Título para txtFecha_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Fecha" />

                    <TextView
                        android:id="@+id/txtFecha_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtEstadoCierre_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Estado de Cierre" />

                    <TextView
                        android:id="@+id/txtEstadoCierre_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"/>

                    <!-- Título para txtProyectoMina_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Proyecto Mina" />

                    <TextView
                        android:id="@+id/txtProyectoMina_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtArea_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Área" />

                    <TextView
                        android:id="@+id/txtArea_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtActividad_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Actividad"/>

                    <TextView
                        android:id="@+id/txtActividad_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtRiesgoRC_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Riesgo RC" />

                    <TextView
                        android:id="@+id/txtRiesgoRC_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"/>

                    <!-- Título para txtReportadoPor_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Reportado Por" />

                    <TextView
                        android:id="@+id/txtReportadoPor_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp" />

                    <!-- Título para txtResponsable_AccionesActivity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Responsable" />

                    <TextView
                        android:id="@+id/txtResponsable_AccionesActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nada que mostrar"
                        android:textSize="23sp"
                        android:background="@drawable/edittext_border"
                        android:padding="7dp"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragment_container_EditarDetalleEvento_AccionesActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/layoutBtns_ActivityAcciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="¿Estas seguro que quieres eliminar el hallazgo?"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSI_Eliminacion_ActivityAcciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="10dp"
                            android:text="SI"
                            android:backgroundTint="#BA274A"/>

                        <Button
                            android:id="@+id/btnNO_Eliminacion_ActivityAcciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="10dp"
                            android:text="NO"
                            android:backgroundTint="#2191fb"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Botones acciones -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                       <!-- <Button
                            android:id="@+id/btnRequerimiento_AccionesActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Requerimiento"
                            android:backgroundTint="#2191fb"
                            android:visibility="gone"/>-->

                        <Button
                            android:id="@+id/btnEditar_AccionesActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="110dp"
                            android:text="Editar"
                            android:backgroundTint="#2191fb"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnEliminar_AccionesActivity"
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Eliminar"
                            android:backgroundTint="#2191fb"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>