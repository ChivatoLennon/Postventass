<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:id="@+id/cardview_deRecycler"
    android:tag="productoTag">


    <GridLayout
        android:id="@+id/layoutCardview_CardviewItemHallazgo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:columnCount="2"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID de Hallazgo:"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_reporteId_cardview"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text=""
                    android:maxLength="20"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riesgo: "
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_riesgo_cardviewHallazgo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text=""
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripcion: "
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_Descripcion_cardviewHallazgo"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text=""
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <Button
                android:id="@+id/btn_verHallazgo_cardviewHallazgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Ver"
                android:elevation="5dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgExclamacion_cardview_ItemHallazgo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exclamacion_icon"
                android:layout_gravity="center"/>



        </LinearLayout>


    </GridLayout>



</androidx.cardview.widget.CardView>