<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.soporteTecnico.SoporteTecnico">

    <!-- Título de la pantalla -->


    <!-- Botón de ayuda -->

    <TextView
        android:id="@+id/text_help"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="20dp"
        android:text="AYUDA"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgview_hallazgo_detalleEvento"
            android:layout_width="310dp"
            android:layout_height="400dp"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            android:contentDescription="Foto del Hallazgo"/>

    </androidx.cardview.widget.CardView>

    <!-- Botón de envío -->
    <Button
        android:id="@+id/button_attach_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/azul_mapa"
        android:elevation="5dp"
        android:text="Adjuntar Imagen" />


    <Button
        android:id="@+id/button_attach_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/azul_mapa"
        android:elevation="5dp"
        android:text="Enviar" />


</LinearLayout>
