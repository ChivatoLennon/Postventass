<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.postventaandroid.ui.documentos.SignatureView
        android:id="@+id/signatureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_above="@+id/buttonLayout"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="20dp"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/progressBar_SignatureActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_marginEnd="15dp"
                android:layout_margin="5dp"
                android:id="@+id/btnBorrar_SignatureActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar" />

            <Button
                android:layout_margin="5dp"
                android:layout_marginStart="15dp"
                android:id="@+id/btnGuardar_SignatureActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicar firma"
                android:enabled="true"/>
        </LinearLayout>




    </LinearLayout>
</RelativeLayout>
